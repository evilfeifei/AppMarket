<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_new_lin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/margin_140px"
            android:layout_marginTop="@dimen/margin_20px">
    <TextView
        android:id="@+id/new_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:maxLines="2"
        android:ellipsize="end"
        android:paddingRight="@dimen/margin_10px"
        android:paddingLeft="@dimen/margin_20px"
        android:textSize="@dimen/txt_size_36px"
        android:text="ddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"/>
            <TextView
                android:id="@+id/new_from_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray1"
                android:textSize="@dimen/txt_size_24px"
                android:layout_marginLeft="@dimen/margin_20px"
                android:layout_alignParentBottom="true"
                android:text="dd"/>
        </RelativeLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/margin_200px"
        android:layout_height="@dimen/margin_140px"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/margin_20px"
        android:layout_marginTop="@dimen/margin_20px"
        android:layout_marginBottom="@dimen/margin_10px"
        />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/common_line"
        android:layout_marginLeft="@dimen/margin_20px"/>
</LinearLayout>