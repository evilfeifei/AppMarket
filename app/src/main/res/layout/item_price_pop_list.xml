<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <TextView
        android:id="@+id/item_price_list_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_50px"
        android:text="默认排序"
        android:textColor="#646464"
        android:textSize="@dimen/txt_size_28px" />

    <ImageView
        android:id="@+id/item_price_list_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/txt_size_26px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_80px"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_item_list_sign"
        android:visibility="gone" />
</RelativeLayout>