<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/item_new_lin">
    <TextView
        android:id="@+id/new_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="@dimen/margin_20px"
        android:textSize="@dimen/txt_size_28px"
        android:text="dd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_180px"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/margin_20px"
        android:layout_marginLeft="@dimen/margin_20px"
        android:layout_marginBottom="@dimen/margin_10px"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/margin_20px"
            android:layout_marginRight="@dimen/margin_20px"
            />
        <ImageView
            android:id="@+id/image3"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/new_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray1"
        android:textSize="@dimen/txt_size_24px"
        android:layout_marginLeft="@dimen/margin_20px"
        android:layout_marginBottom="@dimen/margin_20px"
        android:text="dd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/common_line"
        android:layout_marginLeft="@dimen/margin_20px"/>
</LinearLayout>