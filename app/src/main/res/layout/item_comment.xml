<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_main_bg_selecter"
    >
        <com.huiyun.vrxf.view.roundimage.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/margin_80px"
            android:layout_height="@dimen/margin_80px"
            android:adjustViewBounds="false"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_app_icon"
            app:corner_radius="100dip"
            app:oval="false" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恐怖医院"
            android:textSize="@dimen/txt_size_28px"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="@dimen/txt_size_28px"
                android:textColor="@color/black"
                android:layout_marginRight="10dp"
                android:text="内容ddddddddddddddddddddddddddddddddddddddd"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="20.9M"
        android:layout_margin="10dp"
        android:textColor="@color/gray1"
        android:textSize="@dimen/txt_size_24px"/>

</RelativeLayout>