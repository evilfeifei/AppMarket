<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/margin_20px"
        android:layout_marginRight="@dimen/margin_20px"
        >
        <com.huiyun.amnews.view.roundimage.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/margin_100px"
            android:layout_height="@dimen/margin_100px"
            android:adjustViewBounds="false"
            android:scaleType="centerCrop"
            android:src="@drawable/demo_app_icon"
            app:corner_radius="10dip"
            app:oval="false" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="恐怖医院"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_24px"
            android:layout_marginTop="@dimen/margin_10px"
            android:layout_marginBottom="@dimen/margin_10px"/>
        <TextView
            android:id="@+id/size_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.9M"
            android:textColor="@color/gray1"
            android:textSize="@dimen/txt_size_24px"/>
    </LinearLayout>

</LinearLayout>