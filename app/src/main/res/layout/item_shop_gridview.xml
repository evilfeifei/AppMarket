<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_506px"
        android:padding="1dp" >
        <!--   android:background="@drawable/item_gridview_shape"-->

        <ImageView
            android:id="@+id/item_gridview_goods_iv"
            android:layout_width="@dimen/margin_360px"
            android:layout_height="@dimen/margin_360px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#f0f0f0"
            android:scaleType="centerCrop"
            android:src="@drawable/vr_default_img"/>


        <TextView
            android:id="@+id/goods_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_gridview_goods_iv"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_30px"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/goods_des"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/goods_des"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="#f00"
                android:textSize="@dimen/txt_size_30px"/>


            <ImageView
                android:id="@+id/item_gridview_car_logo"
                android:layout_width="@dimen/margin_50px"
                android:layout_height="@dimen/margin_50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/shop_car_logo"/>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>