<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <include
        android:id="@+id/r_title_bar"
        layout="@layout/title_bar" />
    
    <LinearLayout
        android:layout_below="@id/r_title_bar"
        android:id="@+id/app_v_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/vr_logo"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" 
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/textViewLogoCn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/app_name"
                android:textColor="@color/gray_press"
                android:textSize="12sp" />

            
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" 
        android:layout_below="@id/app_v_id"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/textViewVersion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="16sp"
            android:text=""
            android:background="@color/white" />

        <TextView
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textSize="16sp"
            android:text="联系QQ : 1224409"
            android:background="@color/white" />
    </LinearLayout>

</RelativeLayout>