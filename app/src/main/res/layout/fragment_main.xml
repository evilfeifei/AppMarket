<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/bg_title" >
        <TextView
            android:id="@+id/location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_32px"/>
        <EditText
            android:id="@+id/search_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:ellipsize="end"
            android:focusable="false"
            android:padding="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/search_icon"
            android:background="@drawable/search_edit_bg"
            android:singleLine="true"
            android:hint="VR应用下载排行榜"
            android:textColor="@color/title_color"
            android:textSize="@dimen/txt_size_28px"
            />

        <LinearLayout
            android:id="@+id/down_right_liner"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/title_right_but_selector"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/right_title_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/down_load_icon"
                android:visibility="visible"/>

        </LinearLayout>
    </RelativeLayout>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <com.huiyun.vrxf.view.LoopViewPager
            android:id="@+id/loop_vp"
            android:layout_width="match_parent"
            android:layout_height="375px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/bibei_lin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_main_bg_selecter"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bibei_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_28px"
                    android:textColor="@color/black"
                    android:text="必备"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/jingxuan_lin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_main_bg_selecter"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jingxuan_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_28px"
                    android:textColor="@color/black"
                    android:text="精选"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dianyin_lin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_main_bg_selecter"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dianyin_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_28px"
                    android:textColor="@color/black"
                    android:text="电影"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/yingyin_lin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_main_bg_selecter"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/yingyin_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_28px"
                    android:textColor="@color/black"
                    android:text="影音"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/youxi_lin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/item_main_bg_selecter"
                android:padding="10dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/youxi_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_size_28px"
                    android:textColor="@color/black"
                    android:text="游戏"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VR人气风向标"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_size_30px"
            android:drawableLeft="@drawable/hot_icon"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="12dp"/>
        <com.huiyun.vrxf.view.AbListView
            android:id="@+id/hot_list"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#e7e7e7"
            android:dividerHeight="1dp"
            android:scrollbars="none">
        </com.huiyun.vrxf.view.AbListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="精品应用"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_size_30px"
            android:drawableLeft="@drawable/final_icon"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="12dp"/>

        <com.huiyun.vrxf.view.AbListView
            android:id="@+id/final_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="#e7e7e7"
            android:layout_marginTop="1dp"
            android:dividerHeight="1dp"
            android:scrollbars="none">
        </com.huiyun.vrxf.view.AbListView>

    </LinearLayout>
        
</ScrollView>
</LinearLayout>