<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insearch_layout_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back1_icon"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/margin_20px"
        android:layout_marginRight="@dimen/margin_20px"
        android:layout_marginLeft="@dimen/margin_10px"/>
<LinearLayout
    android:id="@+id/search_home_lin"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_14px"
    android:layout_marginBottom="@dimen/margin_14px"
    android:orientation="horizontal"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:showIn="@layout/fragment_main"
    android:background="@drawable/search_home_gray_bg">

    <ImageView
        android:id="@+id/tt_scan_iv"
        android:layout_width="@dimen/margin_40px"
        android:layout_height="@dimen/margin_40px"
        android:layout_marginLeft="@dimen/margin_20px"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:src="@drawable/search_icon" />

    <EditText
        android:id="@+id/search_edit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_12px"
        android:background="@null"
        android:focusable="false"
        android:layout_toLeftOf="@+id/tt_msg_iv"
        android:layout_toRightOf="@+id/tt_scan_iv"
        android:onClick="onClick"
        android:textColorHint="#9F9F9F"
        android:hint="请搜索"
        android:maxLines="1"
        android:textSize="@dimen/txt_size_24px" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/down_right_liner"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible" >
        <ImageView
            android:id="@+id/right_title_img"
            android:layout_width="@dimen/margin_30px"
            android:layout_height="@dimen/margin_30px"
            android:src="@drawable/down_load_icon"
            android:visibility="visible"/>
    </LinearLayout>
</LinearLayout>