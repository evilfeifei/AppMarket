<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/r_title_bar"
        layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" >

        <EditText
            android:id="@+id/nick_name_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:textSize="@dimen/txt_size_30px"
            android:gravity="center_vertical"
            android:hint="昵称"
            android:textColor="@color/text_color" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray" />
    </RelativeLayout>

    <Spinner
        android:id="@+id/sex_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/spin_bg"
        android:textSize="16sp" 
        android:visibility="gone"/>
    
    <Spinner
        android:id="@+id/age_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/spin_bg"
        android:textSize="16sp" 
        android:visibility="gone"/>
    
    <Spinner
        android:id="@+id/animal_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/spin_bg"
        android:textSize="16sp" 
        android:visibility="gone"/>
    
    <Spinner
        android:id="@+id/constellation_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/spin_bg"
        android:textSize="16sp" 
        android:visibility="gone"/>
    
    <Spinner
	     android:id="@+id/character_spinner"
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="30dp"
	     android:layout_marginRight="30dp"
	     android:background="@drawable/spin_bg"
	     android:textSize="16sp" 
	     android:visibility="gone"/>
    
    <Spinner
	     android:id="@+id/hobby_category_spinner"
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="30dp"
	     android:layout_marginRight="30dp"
	     android:background="@drawable/spin_bg"
	     android:textSize="16sp" 
	     android:visibility="gone"/>
    
    <Spinner
	     android:id="@+id/hobby_spinner"
	     android:layout_width="match_parent"
	     android:layout_height="40dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginLeft="30dp"
	     android:layout_marginRight="30dp"
	     android:background="@drawable/spin_bg"
	     android:textSize="16sp" 
	     android:visibility="gone"/>

    <TextView
        android:id="@+id/regist_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/gray_btn_selector"
        android:gravity="center"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/txt_size_28px" />

</LinearLayout>