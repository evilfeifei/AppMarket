<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="49dp"
        />

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <com.huiyun.amnews.view.FragmentTabHost
            android:id="@+id/tab_host"
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:background="#e3e1e1" />
    </LinearLayout>
    <TextView
        android:id="@+id/updata_count_tv"
        android:layout_width="@dimen/margin_40px"
        android:layout_height="@dimen/margin_40px"
        android:layout_alignParentBottom="true"
        android:text="0"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/txt_size_20px"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_50px"
        android:layout_marginRight="@dimen/margin_50px"
        android:background="@drawable/rad_dian"
        android:visibility="gone"/>
</RelativeLayout>
