<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AppDettailsActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/white" >

            <LinearLayout
                android:id="@+id/back_left_liner"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/item_main_bg_selecter"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back1_icon"  />
            </LinearLayout>


            <TextView
                android:id="@+id/t_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="80dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="应用详情"
                android:textColor="@color/black_1"
                android:textSize="@dimen/txt_size_28px"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">
            <LinearLayout
                android:id="@+id/collect_liner"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/item_main_bg_selecter"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >
                <ImageView
                    android:id="@+id/collect_img"
                    android:layout_width="@dimen/margin_40px"
                    android:layout_height="@dimen/margin_40px"
                    android:src="@drawable/vr_collect_icon"
                    android:visibility="visible"/>
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/share_liner"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/title_right_but_selector"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/share_img"
                        android:layout_width="@dimen/margin_50px"
                        android:layout_height="@dimen/margin_50px"
                        android:src="@drawable/vr_share_icon"
                        android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color"/>
        <com.huiyun.amnews.view.DragTopLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@color/white"
            android:id="@+id/drag_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!--top view-->
            <LinearLayout
                android:id="@+id/top_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <it.sephiroth.android.library.widget.HListView
                    android:id="@+id/hlistview"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:overScrollMode="always"
                    app:hlv_dividerWidth="5dp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textSize="@dimen/txt_size_32px"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_toRightOf="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text=""
                        android:textSize="@dimen/txt_size_28px"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/fabushijian_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发布时间："
                        android:textSize="@dimen/txt_size_32px"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_toRightOf="@+id/fabushijian_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="name"
                        android:textSize="@dimen/txt_size_28px"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/pinfen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应用评分："
                        android:textSize="@dimen/txt_size_32px"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/app_score_tv"
                        android:layout_toRightOf="@+id/pinfen_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="5.9分"
                        android:textSize="@dimen/txt_size_28px"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:id="@+id/jiangli_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下载奖励："
                        android:textSize="@dimen/txt_size_32px"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/award_tv"
                        android:layout_toRightOf="@+id/jiangli_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5V币"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/txt_size_28px"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/gray1"/>
            </LinearLayout>

            <!--content view-->
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/drag_content_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.astuetz.PagerSlidingTabStrip
                    android:id="@+id/tabs"
                    app:pstsShouldExpand="true"
                    app:pstsIndicatorColor="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_70px"
                    android:background="@color/white" />
                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v4.view.ViewPager>

            </LinearLayout>



        </com.huiyun.amnews.view.DragTopLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/tp_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bottom_down_load_color"
        android:visibility="visible">
        <LinearLayout
            android:id="@+id/trample_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/trample_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/vr_trample_icon"/>
        <TextView
            android:id="@+id/trample_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="踩（0）"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_24px"/>
        </LinearLayout>
        <TextView
            android:id="@+id/down_load_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="10dp"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_10px"
            android:layout_marginBottom="@dimen/margin_10px"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/gray_btn_selector"
            android:text="下载"/>

        <LinearLayout
            android:id="@+id/praise_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">
        <ImageView
            android:id="@+id/praise_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/vr_praise_icon"/>
            <TextView
                android:id="@+id/praise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞（0）"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_size_24px"/>
        </LinearLayout>
        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="写评论"
            android:drawableTop="@drawable/vr_comment_icon"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/txt_size_24px"
            android:visibility="gone"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/comment_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/app_bg"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请为应用评分"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/txt_size_28px"
                android:textColor="@color/black"/>
        <RatingBar
            android:id="@+id/environment_rat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/star_style_assessment"
            android:numStars="5"
            android:rating="5.0"
            android:stepSize="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/comment_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            android:padding="13dp"
            android:textSize="@dimen/txt_size_28px"
            android:layout_marginRight="5dp"
            android:hint="评论（支持5-256个汉字）"
            android:background="@drawable/vr_edit_bg"/>
            <TextView
                android:id="@+id/send_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="13dp"
                android:textSize="@dimen/txt_size_28px"
                android:gravity="center|bottom"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:background="@drawable/gray_btn_selector"
                android:text="发表"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入内容"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/txt_size_28px"
            android:textColor="#ffa44b"
            android:visibility="gone"/>

        </LinearLayout>
</RelativeLayout>
