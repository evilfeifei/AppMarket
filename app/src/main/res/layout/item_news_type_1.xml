<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/new_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="@dimen/margin_20px"
        android:textSize="@dimen/txt_size_28px"
        android:text="dd"/>
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/margin_20px"
        android:layout_marginLeft="@dimen/margin_20px"
        android:layout_marginBottom="@dimen/margin_10px"
        />
    <TextView
        android:id="@+id/new_from_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray1"
        android:textSize="@dimen/txt_size_24px"
        android:layout_marginLeft="@dimen/margin_20px"
        android:layout_marginBottom="@dimen/margin_20px"
        android:text="dd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/common_line"
        android:layout_marginLeft="@dimen/margin_20px"/>
</LinearLayout>