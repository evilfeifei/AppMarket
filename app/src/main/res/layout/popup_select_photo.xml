<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99000000"
    android:gravity="center_vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/popup_send_friends_circular_bead"
        android:gravity="center_vertical"
        >
 
        <RelativeLayout
            android:id="@+id/r_send_friends_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_send_friends_circular_bead"
            >
            <LinearLayout
                android:layout_width="match_parent"
            	android:layout_height="wrap_content"
            	android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/select_photos_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
	            	android:layout_height="50dp"
	            	android:background="@drawable/item_bg_selecter"
                    >
                    <TextView
		                android:layout_width="match_parent"
		            	android:layout_height="50dp"
		            	android:gravity="center"
		            	android:textSize="18sp"
		            	android:textColor="#4bb4d7"
		            	android:layout_centerInParent="true"
		            	android:text="相册"
	                />
                </RelativeLayout>
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"/>
	            <RelativeLayout
                    android:id="@+id/take_photos_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
	            	android:layout_height="50dp"
	            	android:background="@drawable/item_bg_selecter"
                    >
		            <TextView
		                android:layout_width="wrap_content"
		            	android:layout_height="50dp"
		            	android:gravity="center"
		            	android:textSize="18sp"
		            	android:textColor="#4bb4d7"
		            	android:layout_centerInParent="true"
		            	android:text="拍照"
		                />
		        </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        
    </RelativeLayout>

</LinearLayout>
